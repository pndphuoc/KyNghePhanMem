@model SV19T1081018.DomainModel.Shipper
@{
    //ViewBag.Title = "Delete";
}
<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/shipper/delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên người giao hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group" style="text-align: center">
                @if (SV19T1081018.BusinessLayer.CommonDataService.InUsedShipper(Model.ShipperID))
                {
                    <p class="text-danger">Không xóa được shipper này</p>
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;" disabled>
                        <i class="fa fa-remove"></i>
                        Xóa dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/shipper" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                }
                else
                {
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                        <i class="fa fa-remove"></i>
                        Xóa dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/shipper" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                }
                </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>



