@model SV19T1081018.DomainModel.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/supplier/delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.SupplierName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên hợp đồng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ContactName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Country</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thành phố:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.City</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mã bưu chính</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.PostalCode</p>
                </div>
            </div>
            <div class="form-group" style="text-align: center">
                @if (SV19T1081018.BusinessLayer.CommonDataService.InUsedSupplier(Model.SupplierID))
                {
                    <p class="text-danger">Không xóa được khách hàng này</p>
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;" disabled>
                        <i class="fa fa-remove"></i>
                        Xóa dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/supplier" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                }
                else
                {
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                        <i class="fa fa-remove"></i>
                        Xóa dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/supplier" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                }
                </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>

