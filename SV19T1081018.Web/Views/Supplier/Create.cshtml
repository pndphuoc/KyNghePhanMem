@model SV19T1081018.DomainModel.Supplier
@{
    //ViewBag.Title = "Create";
}

    <div class="box box-primary" style="border-radius: 10px">
        <div class="box-body">
            <form class="form-horizontal" action="~/supplier/save" method="post">
                <input name="SupplierID" value="@Model.SupplierID" type="hidden"/>
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên nhà cung cấp:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "", style = "border-radius: 10px" })
                        @Html.ValidationMessage("SupplierName", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên hợp đồng:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @style = "border-radius: 10px" })
                        @Html.ValidationMessage("ContactName", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @style = "border-radius: 10px" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Phone, new {@type="number", @class = "form-control", @style = "border-radius: 10px" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia:</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control", @style = "border-radius: 10px" })
                        @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @style = "border-radius: 10px" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", @style = "border-radius: 10px" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                            <i class="fa fa-save"></i>
                            Lưu dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/supplier" style="border-radius: 10px;">
                            <i class="fa fa-backward"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>

