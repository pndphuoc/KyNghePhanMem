@model SV19T1081018.Web.Models.SupplierPaginationResult
@{
    Layout = null;
}

<p>Có <strong>@Model.RowCount</strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div class="table-responsive">
    <form action="~/product" method="post">

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="bg-primary">
                    <th>Tên nhà cung cấp</th>
                    <th>Tên hợp đồng</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Quốc gia</th>
                    <th>Thành phố</th>
                    <th>Mã bưu chính</th>
                    <th style="width: 100px">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.SupplierName</td>
                        <td>@item.ContactName</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.PostalCode</td>
                        <td class="text-right">
                            <button type="submit" name="SupplierID" value="@item.SupplierID" class="btn btn-primary btn-flat btn-xs"
                                    style="border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                                <i class="glyphicon glyphicon-th-list"></i>
                            </button>
                            <a href="~/supplier/edit/@item.SupplierID" class="btn btn-primary btn-flat btn-xs" style="border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"> <i class="fa fa-edit"> </i></a>
                            <a href="~/supplier/delete/@item.SupplierID" class="btn btn-danger btn-flat btn-xs" style="border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"> <i class="fa fa-remove"> </i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </form>
</div>
<!-- /.box-body -->
<div class="box-footer text-center">
    <ul class="pagination" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }

        }
    </ul>
</div>
