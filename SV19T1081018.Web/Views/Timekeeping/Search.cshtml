@model SV19T1081018.Web.Models.NhanVienPaginationResult
@{
    Layout = null;
}

    <div class="box box-info">
        <div class="box-header with-border ">
            <h3 class="box-title">Thư viện ảnh</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-gray">
                        <th>Ảnh</th>
                        <th>Tên nhân viên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Số điện thoại</th>
                        <th>Ngày vào làm</th>
                        <th class="text-right">
                            <a class="btn btn-xs btn-primary" href="#">
                                <i class="fa fa-plus"></i>
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td style="vertical-align:middle">
                                <img src="@item.Anh" alt="" style="width:100px" />
                            </td>
                            <td style="vertical-align:middle;">
                                @item.TenNhanVien
                            </td>
                            <td style="vertical-align:middle;">@item.NgaySinh</td>

                            @if (item.isNam)
                            {
                                <td style="vertical-align:middle;">Nam</td>
                            }
                            else
                            {
                                <td style="vertical-align:middle;">Nữ</td>
                            }
                            <td style="vertical-align:middle;">@item.SoDienThoai</td>
                            <td style="vertical-align:middle;">@item.NgayVaoLam</td>

                            <td style="vertical-align:middle; text-align:right">
                                <a class="btn btn-xs btn-primary" href="#">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" href="#" onclick="return confirm('Xóa ảnh của mặt hàng hay không?')">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer text-center">
        </div>
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>

