@model SV19T1081018.DomainModel.Category
@{
    // ViewBag.Title = "Delete";
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/category/delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email" name="CategoryName">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
                <label class="control-label col-sm-2" for="email" name="CategoryName">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>


            <div class="form-group" style="text-align: center">
                @if (SV19T1081018.BusinessLayer.CommonDataService.InUsedCategory(Model.CategoryID))
                {
                    <p class="text-danger">Không xóa được loại hàng này</p>
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;" disabled>
                        <i class="fa fa-remove"></i>
                        Xóa dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/category" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                }
                else
                {
                    <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                        <i class="fa fa-remove"></i>
                        Xóa dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/category" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                }
                </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>


