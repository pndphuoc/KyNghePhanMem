@model SV19T1081018.Web.Models.CategoryPaginationResult
@{
    Layout = null;
}

<p>Có <strong>@Model.RowCount</strong> loại hàng trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div class="table-responsive">
    <form action="~/product" method="post">

        <table class="table table-bordered table-striped table-hover" style="border-radius: 10px">
            <thead>
                <tr class="bg-primary">
                    <th>Mã loại hàng</th>
                    <th>Tên loại hàng</th>
                    <th>Mô tả</th>
                    <th style="width: 100px">&nbsp;</th>
                </tr>



            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td class="text-right">
                            <button type="submit" name="CategoryID" value="@item.CategoryID" class="btn btn-primary btn-flat btn-xs"
                                    style="border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"> <i class="glyphicon glyphicon-th-list"></i></button>
                            <a href="~/category/edit/@item.CategoryID" class="btn btn-primary btn-flat btn-xs" style="border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"> <i class="fa fa-edit"> </i></a>
                            <a href="~/category/delete/@item.CategoryID" class="btn btn-danger btn-flat btn-xs" style="border-radius: 5px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);"> <i class="fa fa-remove"> </i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </form>
</div>
<!-- /.box-body -->
<div class="box-footer text-center">
    <ul class="pagination" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="#">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }

        }
    </ul>
</div>
