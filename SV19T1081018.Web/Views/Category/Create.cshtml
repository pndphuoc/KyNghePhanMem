@model SV19T1081018.DomainModel.Category
@{
    //ViewBag.Title = "Create";
}

    <div class="box box-primary" style="border-radius: 10px">
        <div class="box-body">
            <form class="form-horizontal" action="~/category/save" method="post">
                <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Tên loại hàng:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="CategoryName" name="CategoryName" value="@Model.CategoryName" style="border-radius: 10px" autofocus>
                        @Html.ValidationMessage("CategoryName", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Mô tả:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Description, new {@class="form-control", @style="border-radius: 10px" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                            <i class="fa fa-save"></i>
                            Lưu dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/category" style="border-radius: 10px;">
                            <i class="fa fa-backward"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>

