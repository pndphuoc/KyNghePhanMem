@model SV19T1081018.DomainModel.Product
@{
    ViewBag.Title = "Xóa mặt hàng";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/delete/@Model.ProductID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ProductName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Unit</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Price</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <img src="@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                @if (SV19T1081018.BusinessLayer.CommonDataService.InUsedProduct(Model.ProductID))
                {
                    <div class="col-sm-offset-2 col-sm-10">
                        <p class="text-danger">Không xóa được sản phẩm này</p>
                        <button type="submit" class="btn btn-danger" disabled>

                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>
                        <a class="btn btn-warning" href="~/product">
                            <i class="fa fa-ban"></i> Quay lại
                        </a>
                    </div>
                }
                else
                {
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">

                            <i class="fa fa-trash"></i> Đồng ý xóa
                        </button>
                        <a class="btn btn-warning" href="~/product">
                            <i class="fa fa-ban"></i> Quay lại
                        </a>
                    </div>
                }
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

