@model SV19T1081018.DomainModel.NguoiDung
@{
    ViewBag.Title = "Thay Đổi Mật Khẩu";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Account/Save" method="post">
            @Html.HiddenFor(m => m.Username)
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập mật khẩu cũ:</label>
                <div class="col-sm-10">
                    <input type="Password" name="oldPassword" />
                </div>
                <div class="col-sm-10">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="Password" name="newPassword" />
                </div>
                <div class="col-sm-10">
                    @Html.ValidationMessage("DuplicatedPassword", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập lại mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="Password" name="reNewPassword" />
                </div><div class="col-sm-10">
                    @Html.ValidationMessage("NewPassword", new { @class = "text-danger" })

                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-reddit">
                        <i class="fa fa-save"></i>
                        Lưu
                    </button>
                    <a class="btn btn-default" href="~/">
                        Quay lại
                    </a>


                </div>
            </div>
        </form>
    </div>
</div>