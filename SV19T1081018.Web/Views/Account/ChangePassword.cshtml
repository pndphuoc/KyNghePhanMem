@model SV19T1081018.DomainModel.Employee
@{
    //ViewBag.Title = "Thay đổi mật khẩu";
}

<div class="box box-primary" style="border-radius: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <div class="box-body">
        <form class="form-horizontal" action="~/account/savenewpassword" method="post">
            @Html.HiddenFor(m => m.Email)
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Nhập mật khẩu cũ:</label>
                <div class="col-sm-10">
                    <input type="password" name="oldPassword" />
                </div>
                <div class="col-sm-10">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password" name="newPassword" />
                </div>
                <div class="col-sm-10">
                    @Html.ValidationMessage("DuplicatedPassword", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Nhập lại mật khẩu mới:</label>
                <div class="col-sm-10">
                    <input type="password" name="reNewPassword" />
                </div><div class="col-sm-10">
                    @Html.ValidationMessage("NewPassword", new { @class = "text-danger" })

                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                        <i class="fa fa-remove"></i>
                        Lưu
                    </button>
                    <a class="btn btn-default" href="~/" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>


                </div>
            </div>
        </form>
    </div>
</div>
