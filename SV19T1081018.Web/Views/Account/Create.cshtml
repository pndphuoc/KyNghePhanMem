@model SV19T1081018.DomainModel.NguoiDung
@{
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/account/save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="MaNguoiDung" value="@Model.MaNguoiDung" />

            <div class="form-group">
                <label class="control-label col-sm-2">Họ Và Tên</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", @autofocus = "", @style = "border-radius: 10px" })
                    @Html.ValidationMessage("HoTen", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Tên đăng nhập</label>
                <div class="col-sm-10">

                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @style = "border-radius: 10px" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Password, new { @class = "form-control", @style = "border-radius: 10px" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Là chủ?</label>
                <div class="col-sm-10">
                    @Html.CheckBoxFor(m => m.isChuCuaHang)
                

                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="@Model.Anh" class="img img-bordered" style="width:200px" />
                    @Html.HiddenFor(m => m.Anh)
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                        <i class="fa fa-save"></i>
                        Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/account" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>


