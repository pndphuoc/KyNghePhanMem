@using SV19T1081018.DomainModel
@model SV19T1081018.Web.Models.PaginationSearchInput
@{
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form action="~/account/search" id="searchInput">
            @Html.HiddenFor(m => m.PageSize)
            <div class="input-group" style="border-radius: 10px">
                <input type="text" name="SearchValue" class="form-control" placeholder="Nhập Thông Tin nhân viên cần tìm" value="@Model.SearchValue">
                <span class="input-group-btn" style="border-radius: 10px">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    @if (((NguoiDung)Session["Account"]).isChuCuaHang == true)
                    {

                        <a href="~/account/create" class="btn btn-flat btn-primary" style="margin-left: 5px; border-radius: 10px">
                            <i class="fa fa-plus" style="margin-right: 5px"></i>Thêm tài khoản
                        </a>
                    }
                    else
                    {
                        <button disabled class="btn btn-flat btn-primary" style="margin-left: 5px; border-radius: 10px">
                            <i class="fa fa-plus" style="margin-right: 5px"></i>Thêm tài khoản
                        </button>
                    }
                </span>
            </div>
        </form>
        <div id="searchResult"></div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            doSearch(@Model.Page);
            $("#searchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
                return false;
            });
        });

    </script>
}

