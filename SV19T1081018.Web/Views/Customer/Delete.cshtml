@model SV19T1081018.DomainModel.Customer


    <div class="box box-primary" style="border-radius: 10px">
        <div class="box-body">
            <form class="form-horizontal" action="~/customer/delete/@Model.CustomerID" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Tên khách hàng:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.CustomerName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Tên giao dịch:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.ContactName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Address</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Quốc gia:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Country</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Thành phố:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.City</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Mã bưu chính</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.PostalCode</p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        @if (SV19T1081018.BusinessLayer.CommonDataService.InUsedCustomer(Model.CustomerID))
                        {
                            <p class="text-danger">Không xóa được khách hàng này</p>
                            <button type="submit" class="btn btn-danger" style="border-radius: 10px;" disabled>
                                <i class="fa fa-remove"></i>
                                Xóa dữ liệu
                            </button>
                            <a class="btn btn-default" href="~/customer" style="border-radius: 10px;">
                                <i class="fa fa-backward"></i>
                                Quay lại
                            </a>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                                <i class="fa fa-remove"></i>
                                Xóa dữ liệu
                            </button>
                            <a class="btn btn-default" href="~/customer" style="border-radius: 10px;">
                                <i class="fa fa-backward"></i>
                                Quay lại
                            </a>
                        }


                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>

