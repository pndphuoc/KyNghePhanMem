@model SV19T1081018.DomainModel.Customer
@{
    //ViewBag.Title = "Thêm mới khách hàng";
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">
            @Html.HiddenFor(m => m.CustomerID)
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên khách hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CustomerName, new { @class="form-control", @autofocus = "", style="border-radius: 10px" })
                    @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên giao dịch:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @style = "border-radius: 10px" })
                    @Html.ValidationMessageFor(m => m.ContactName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Address, new {@class="form-control", @style="border-radius: 10px" })
                   @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Quốc gia:</label>
                <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new {@class ="form-control", @style="border-radius: 10px" })  
                @Html.ValidationMessageFor(m => m.Country, "", new { @class="text-danger"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Thành phố:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.City, new {@class="form-control", @style="border-radius: 10px" })                 
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mã bưu chính</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PostalCode, new {@class="form-control", @style="border-radius: 10px" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                        <i class="fa fa-save"></i>
                        Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/customer" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                </div>
            </div>
            @*<div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ValidationSummary()
            </div>
        </div>*@
        </form>
    </div>
    <!-- /.box-body -->
</div>

