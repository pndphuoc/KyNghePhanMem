@model SV19T1081018.DomainModel.CaLamViec
@{
    //ViewBag.Title = "Chuc Vu";
}

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/shift/save" method="post">
            @Html.HiddenFor(m => m.MaCaLamViec)
            @*<input type="hidden" name="ShipperID" value="@Model.ShipperID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên ca làm việc:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.TenCaLamViec, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.TenCaLamViec, "", new { @style = "color:#f00" })
                    @*<input type="text" autofocus class="form-control" name="ShipperName" id="ShipperName" placeholder="" value="@Model.ShipperName">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Thời gian bắt đầu:</label>
                <div class="col-sm-10">
                    <input type="time" name="ThoiGianBatDau" value="@Model.ThoiGianBatDau" style="border-radius: 10px;">
                    @Html.ValidationMessageFor(m => m.ThoiGianBatDau, "", new { @style = "color:#f00" })
                    @*<input type="text" class="form-control" name="Phone" id="Phone" placeholder="" value="@Model.Phone">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Thời gian kết thúc:</label>
                <div class="col-sm-10">
                    <input type="time" name="ThoiGianKetThuc" value="@Model.ThoiGianKetThuc" style="border-radius: 10px;">
                    @Html.ValidationMessageFor(m => m.ThoiGianKetThuc, "", new { @style = "color:#f00" })
                    @*<input type="text" class="form-control" name="Phone" id="Phone" placeholder="" value="@Model.Phone">*@
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/shift" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>



