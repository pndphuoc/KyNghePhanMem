@model SV19T1081018.DomainModel.CaLamViec
@{
    ViewBag.Title = "Xóa người ca làm việc";
}

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/shift/delete/@Model.MaCaLamViec" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên ca làm việc</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.TenCaLamViec</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Thời gian bắt đầu:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ThoiGianBatDau</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Thời gian kết thúc:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ThoiGianKetThuc</p>
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i> Đồng ý xóa
                    </button>

                    <a href="~/shift" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>

            </div>
            @if (ViewBag.mess == 1)
            {
                <p style="text-align:center; color: red">Không xoá được ca làm việc này vì có liên quan đến trường dữ liệu khác</p>
            }
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>

