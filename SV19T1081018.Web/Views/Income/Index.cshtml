@model SV19T1081018.Web.Models.LuongSearchValue

@{

}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    <div class="box-body">
        <form action="~/income/search" id="searchInput">
            @Html.HiddenFor(m => m.PageSize)
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="Thang">

                        <option value="0">-- Tháng --</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            if (Model.Thang == i)
                            {
                                <option selected value="@i"> @i </option>

                            }
                            else
                            {
                                <option value="@i"> @i </option>

                            }
                        }


                    </select>
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="nam">
                        <option value="0">-- Năm --</option>
                        @for (int i = 2015; i <= DateTime.Now.Year; i++)
                        {
                            if (Model.Nam == i)
                            {
                                <option selected value="@i"> @i </option>

                            }
                            else
                            {
                                <option value="@i"> @i </option>

                            }
                        }
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input type="text" name="searchValue" value="@Model.SearchValue"
                           class="form-control"
                           placeholder="Nhập tên nhân viên cần tìm">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i>
                        </button>
                        @*<a href="#"
                           class="btn btn-flat btn-primary"
                           style="margin-left:5px;">
                            <i class="fa fa-plus"></i> Chốt lương cho nhân viên
                        </a>*@
                    </span>
                </div>
            </div>
        </form>


        <div id="searchResult">

        </div>

    </div>
</div>
@section scripts{
    <script>

            $(document).ready(function () {
                doSearch(@Model.Page);
                $("#searchInput").submit(function (e) {
                    e.preventDefault();
                    doSearch(1);
                    return false;
                });
            });



    </script>


}

