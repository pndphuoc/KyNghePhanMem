@model SV19T1081018.DomainModel.ChucVu
@{
    //ViewBag.Title = "Chuc Vu";
}

<div class="box box-">
    <div class="box-body">
        <form class="form-horizontal" action="~/position/save" method="post">
            @Html.HiddenFor(m => m.MaChucVu)
            @*<input type="hidden" name="ShipperID" value="@Model.ShipperID" />*@
            <div class="form-group">
                <label class="control-label col-sm-2 ">Tên chức vụ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.TenChucVu, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.TenChucVu, "", new { @style = "color:#f00" })
                    @*<input type="text" autofocus class="form-control" name="ShipperName" id="ShipperName" placeholder="" value="@Model.ShipperName">*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2 ">Tiền lương:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.TienLuong, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TienLuong, "", new { @style = "color:#f00" })
                    @*<input type="text" class="form-control" name="Phone" id="Phone" placeholder="" value="@Model.Phone">*@
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>

                    <a href="~/position" class="btn btn-success">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">

    </div>
    <!-- /.box-footer-->
</div>



