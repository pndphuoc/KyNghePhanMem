@model SV19T1081018.Web.Models.PositionPaginationResult
@{
    Layout = null;
}
<p>Có <strong>@Model.RowCount</strong> trong tổng số <strong>@Model.PageCount</strong> trang</p>
<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="bg-primary">
            <tr>
                <th>STT</th>
                <th>Tên chức vụ</th>
                <th>Tiền lương</th>

                <th style="width: 70px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.MaChucVu</td>
                    <td>@item.TenChucVu</td>
                    <td>@item.TienLuong</td>

                    <td class="text-right">
                        <a href="~/position/edit/@item.MaChucVu" class="btn btn-flat btn-xs btn-primary">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/position/delete/@item.MaChucVu" class="btn btn-flat btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>

            }

        </tbody>
    </table>
</div>
<div class="box-footer text-center">
    <ul class="pagination">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.Page)
            {
                <li class="active"><a href="a">@i</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }
        }
    </ul>
</div>

