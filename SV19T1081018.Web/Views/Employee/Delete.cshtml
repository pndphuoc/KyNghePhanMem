@model SV19T1081018.DomainModel.Employee
@{
    ViewBag.Title = "Delete";
}

    <div class="box box-primary" style="border-radius: 10px">
        <div class="box-body">
            <form class="form-horizontal" action="~/employee/delete/@Model.EmployeeID" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2" name="FirstName">Họ:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.FirstName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.LastName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ngày sinh:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.BirthDate</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ảnh</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> <img src="@Model.Photo" style="width: 100px; height: 150px"/></p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ghi chú:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Notes</p>
                    </div>
                </div>
                <div class="form-group" style="text-align: center">
                    @if (SV19T1081018.BusinessLayer.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <p class="text-danger">Không xóa được nhân viên này</p>
                        <button type="submit" class="btn btn-danger" style="border-radius: 10px;" disabled>
                            <i class="fa fa-remove"></i>
                            Xóa dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/employee" style="border-radius: 10px;">
                            <i class="fa fa-backward"></i>
                            Quay lại
                        </a>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                            <i class="fa fa-remove"></i>
                            Xóa dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/employee" style="border-radius: 10px;">
                            <i class="fa fa-backward"></i>
                            Quay lại
                        </a>
                    }
                    </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>


