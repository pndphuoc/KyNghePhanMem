@model SV19T1081018.DomainModel.NhanVien
@{
    ViewBag.Title = "Xoá Nhân Viên";
}

    <div class="box box-primary" style="border-radius: 10px">
        <div class="box-body">
            <form class="form-horizontal" action="~/employee/delete/@Model.MaNhanVien" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2" name="FirstName">Họ Và Tên</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.TenNhanVien</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Chức Vụ</label>
                    <div class="col-sm-10">
                        @foreach (var item in SV19T1081018.BusinessLayer.CommonDataService.DanhSachChucVu())

                        {
                            if (item.MaChucVu == Model.MaChucVu)
                            {
                                <p style="margin-top:10px;" value="@item.MaChucVu">@item.TenChucVu</p>
                                break;
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Giới Tính</label>
                    <div class="col-sm-10">
                        @if (Model.isNam == true)
                        {
                            <p class="form-control-static">Nam</p>
                        }
                        else
                        {

                            <p class="form-control-static">Nữ</p>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ngày sinh:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.NgaySinh</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ảnh</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"> <img src="@Model.Anh" style="width: 100px; height: 150px" /></p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ghi chú:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.GhiChu</p>
                    </div>
                </div>
                <div class="form-group" style="text-align: center">
                    @if (SV19T1081018.BusinessLayer.CommonDataService.Inused(Model.MaNhanVien))
                    {
                        <p class="text-danger">Không xóa được nhân viên này</p>
                        <button type="submit" class="btn btn-danger" style="border-radius: 10px;" disabled>
                            <i class="fa fa-remove"></i>
                            Xóa dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/employee" style="border-radius: 10px;">
                            <i class="fa fa-backward"></i>
                            Quay lại
                        </a>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger" style="border-radius: 10px;">
                            <i class="fa fa-remove"></i>
                            Xóa dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/employee" style="border-radius: 10px;">
                            <i class="fa fa-backward"></i>
                            Quay lại
                        </a>
                    }
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>


