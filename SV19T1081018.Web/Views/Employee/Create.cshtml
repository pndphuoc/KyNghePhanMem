@model SV19T1081018.DomainModel.Employee
@{
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/save" method="post"  enctype="multipart/form-data">
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "", @style = "border-radius: 10px" })
                    @Html.ValidationMessage("FirstName", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @style = "border-radius: 10px" })
                    @Html.ValidationMessage("LastName", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control datepicker" name="BirthDateString"
                           value="@string.Format("{0:dd/MM/yyyy}", Model.BirthDate)"
                           style="border-radius: 10px">
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class="text-danger"})
                    @Html.HiddenFor(m => m.BirthDate)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", @style = "border-radius: 10px" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "border-radius: 10px" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <!--               
            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu:</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "border-radius: 10px" })
                </div>
            </div>
            -->

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="@Model.Photo" class="img img-bordered" style="width:200px" />
                    @Html.HiddenFor(m => m.Photo)
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                        <i class="fa fa-save"></i>
                        Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/employee" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>


