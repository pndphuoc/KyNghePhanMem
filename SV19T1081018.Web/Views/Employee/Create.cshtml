@model SV19T1081018.DomainModel.NhanVien
@{
}

<div class="box box-primary" style="border-radius: 10px">
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="MaNhanVien" value="@Model.MaNhanVien" />

            <div class="form-group">
                <label class="control-label col-sm-2">Họ Và Tên</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.TenNhanVien, new { @class = "form-control", @autofocus = "", @style = "border-radius: 10px" })
                    @Html.ValidationMessage("TenNhanVien", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control datepicker" name="BirthDateString"
                           value="@string.Format("{0:dd/MM/yyyy}", Model.NgaySinh)"
                           style="border-radius: 10px">
                    @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.NgaySinh)
                </div>
            </div>
          

            @Html.HiddenFor(m => m.NgayVaoLam)



            <div class="form-group">
                <label class="control-label col-sm-2">Số Điện Thoại</label>
                <div class="col-sm-10">
                   
                    @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", @style = "border-radius: 10px" })
                    @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giới Tính</label>
                <div class="col-sm-10">
                    <select class="form-control" id="" name="isNam">
                        @if (Model.MaNhanVien != 0)
                        {
                            if (Model.isNam == true)
                            {
                                <option selected value="true">Nam</option>
                                <option value="false">nữ</option>
                            }
                            else

                            {
                                <option value="true">Nam</option>
                                <option selected value="false">nữ</option>
                            }
                        }
                        else
                        {
                            <option value="true">Nam</option>
                            <option value="false">Nữ</option>

                        }


                    </select>

                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Chức Vụ:</label>
                <div class="col-sm-10">
                    <select class="form-control" id="ChucVu" name="MaChucVu">
                        @foreach (var item in SV19T1081018.BusinessLayer.CommonDataService.ListOfChucVu())

                        {


                            if (item.MaChucVu == Model.MaChucVu)
                            {
                                <option selected value="@item.MaChucVu">@item.TenChucVu</option>
                            }
                            else
                            {
                                <option value="@item.MaChucVu">@item.TenChucVu</option>
                            }



                        }
                    </select>

                </div>

            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", @style = "border-radius: 10px" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="@Model.Anh" class="img img-bordered" style="width:200px" />
                    @Html.HiddenFor(m => m.Anh)
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success" style="border-radius: 10px;">
                        <i class="fa fa-save"></i>
                        Lưu dữ liệu
                    </button>
                    <a class="btn btn-default" href="~/employee" style="border-radius: 10px;">
                        <i class="fa fa-backward"></i>
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box-body -->
</div>


